{
  "name": "lmp-reader",
  "displayName": "LMP Reader",
  "description": "Read and convert Doom .lmp image files",
  "version": "0.1.0",
  "publisher": "flaffy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/flafmg/lmp-reader"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "lmpReader.lmpEditor",
        "displayName": "LMP Image Viewer",
        "selector": [
          {
            "filenamePattern": "*.lmp"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "lmpReader.convertToPNG",
        "title": "LMP: Convert to PNG"
      },
      {
        "command": "lmpReader.convertFromPNG",
        "title": "LMP: Convert PNG to LMP"
      },
      {
        "command": "lmpReader.loadPalette",
        "title": "LMP: Load Custom Palette"
      },
      {
        "command": "lmpReader.resetPalette",
        "title": "LMP: Reset Palette to Default"
      },
      {
        "command": "lmpReader.applyPalette",
        "title": "LMP: Select Palette Page"
      }
    ],
    "configuration": {
      "title": "LMP Reader",
      "properties": {
        "lmpReader.palettePath": {
          "type": "string",
          "default": "",
          "order": 1,
          "description": "Path to custom palette file. Leave empty to use default Doom palette."
        },
        "lmpReader.paletteIndex": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "order": 2,
          "description": "Palette page index to use."
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .lmp",
          "command": "lmpReader.convertToPNG",
          "group": "lmpReader"
        },
        {
          "when": "resourceExtname == .png",
          "command": "lmpReader.convertFromPNG",
          "group": "lmpReader"
        }
      ],
      "commandPalette": [
        {
          "command": "lmpReader.convertToPNG",
          "when": "resourceExtname == .lmp"
        },
        {
          "command": "lmpReader.convertFromPNG"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/pngjs": "^6.0.5",
    "pngjs": "^7.0.0"
  }
}
